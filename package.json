{
  "name": "kyamtale",
  "version": "1.0.0",
  "description": "Un launcher de Hytale personalizado",
  "main": "src/main.js",
  "author": "TECNO BROS <contacto@tecnobros.es>",
  "engines": {
    "node": "^20.x.x"
  },
  "scripts": {
    "start": "electron .",
    "prebuild": "taskkill /F /IM \"KyamTale Launcher.exe\" /T > nul 2>&1 || exit 0 && rmdir /S /Q dist\\win-unpacked 2>nul",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.battly.hytalelauncher",
    "productName": "KyamTale Launcher",
    "win": {
      "target": "dir",
      "icon": "src/assets/images/logo.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
      "config.json"
    ]
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.4.0"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "axios": "^1.13.2",
    "fs-extra": "^11.3.3",
    "node-localstorage": "^3.0.5",
    "node-stream-zip": "^1.15.0",
    "semver": "^7.7.3",
    "uuid": "^13.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/1ly4s0/Battly4Hytale.git"
  },
  "private": true
}
